{
  "name": "ember-component-analyzer",
  "version": "1.1.0",
  "description": "Analyze ember app to know about the components that are used in each template.",
  "main": "index.js",
  "scripts": {
    "lint": "node_modules/.bin/eslint '**/*.js'",
    "pretest": "npm run lint",
    "test": "COVERAGE=true ember test",
    "check-coverage": "istanbul check-coverage coverage/coverage-final.json --statements 100 --functions 100 --branches 100 --lines 100",
    "commit": "git-cz",
    "lint:js": "eslint --max-warnings 0 ./*.js addon app config tests",
    "lint:hbs": "ember-template-lint .",
    "posttest": "npm run report-coverage && npm run check-coverage && npm run validate-coverage",
    "report-coverage": "istanbul report --include=coverage/coverage-final.json text",
    "semantic-release": "semantic-release",
    "validate-coverage": "test \"$(cat coverage/coverage-summary.json | json total.lines.total)\" -gt 0"
  },
  "keywords": [
    "ember",
    "component",
    "analyze",
    "glimmer"
  ],
  "author": "BBVAEngineering",
  "contributors": [
    {
      "name": "josex2r",
      "url": "https://github.com/josex2r/"
    }
  ],
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BBVAEngineering/ember-component-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/BBVAEngineering/ember-component-analyzer/issues"
  },
  "homepage": "https://github.com/BBVAEngineering/ember-component-analyzer#readme",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@ember/optional-features": "^0.7.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "ember-cli-code-coverage": "^1.0.0-beta.8",
    "ember-cli-template-lint": "^1.0.0-beta.2",
    "ember-source-channel-url": "^1.1.0",
    "ember-try": "^0.2.23",
    "eslint": "^5.15.1",
    "eslint-config-bbva": "^2.0.3",
    "eslint-plugin-ember": "^6.2.0",
    "eslint-plugin-node": "^8.0.1",
    "husky": "^1.3.1",
    "istanbul": "^0.4.5",
    "json": "^9.0.6",
    "mocha": "^6.0.2",
    "semantic-release": "^15.13.3"
  },
  "dependencies": {
    "@glimmer/syntax": "^0.39.2",
    "babel-register": "^6.26.0",
    "ember-template-lint": "^1.1.0",
    "lodash": "^4.17.11",
    "strip-bom": "^3.0.0",
    "walk-sync": "^1.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
